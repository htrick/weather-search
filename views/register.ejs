<header>Bookmark Manager</header>
<div class="form-entry">
    <h1>Register</h1>
    <%- include ("partials/messages") %>
    <form action="/users/register" method="POST">
        <div class="form-item">
            <label for="name">Name</label><br>
            <input type="name" id="name" name="name" placeholder="Name" value="<%= typeof name == "undefined" ? "" : name %>">
        </div>
        <div class="form-item">
            <label for="email">Email</label><br>
            <input type="email" id="email" name="email" placeholder="Email" value="<%= typeof email == "undefined" ? "" : email %>">
        </div>
        <div class="form-item">
            <label for="password">Password</label><br>
            <input type="password" id="password" name="password" placeholder="Create Password" value="<%= typeof password == "undefined" ? "" : password %>">
        </div>
        <div class="form-item">
            <label for="password2">Confirm Password</label><br>
            <input type="password" id="password2" name="password2" placeholder="Confirm Password" value="<%= typeof password2 == "undefined" ? "" : password2 %>">
        </div>
        <input type="submit" value="Register">
    </form>
    <p class="switch-link">
        Have An Account? <a href="/users/login">Login</a>
    </p>
</div>
